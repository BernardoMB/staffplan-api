files:
  /etc/filebeat/filebeat.yml:
    mode: "000755"
    owner: root
    group: root
    content: |
      filebeat.inputs:
      - type: log
        paths:
          - /var/log/nginx/*.log
          - /var/log/nodejs/*.log
        json.message_key: event
        json.keys_under_root: true
        json.overwrite_keys: true
      output.elasticsearch:
        hosts: ["https://search-api-logs-sbiagyunywx5bmcihfwke4npqm.us-west-1.es.amazonaws.com"]

commands:
  1_command:
    command: "curl -L -O https://artifacts.elastic.co/downloads/beats/filebeat/filebeat-7.2.0-x86_64.rpm"
    cwd: /home/ec2-user
  2_command:
    command: "rpm -ivh --replacepkgs filebeat-7.2.0-x86_64.rpm"
    cwd: /home/ec2-user
  3_command:
    command: "/etc/init.d/filebeat start"
